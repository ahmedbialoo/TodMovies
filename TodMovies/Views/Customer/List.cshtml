

@{
    ViewBag.Title = "Index";
}


@Html.ActionLink("New Customer", "New", "Customer", new {style="margin:10px", @class = "btn btn-primary" })

<table id="customers" class="table">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Discount Rate</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
@section scripts{
        <script>
            $(document).ready(function () {
                var table = $("#customers").DataTable({
                    ajax: {
                        url: "/api/customers",
                        dataSrc:""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data,type, customer) {
                                return "<a href='/customer/edit/" + customer.id + "' >" + data + "</a>";
                            }
                        },
                        {
                            data:"memberShipType.name"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn js-delete' data-customer-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });

                $("#customers").on("click",".js-delete", function () {
                    var btn = $(this);
                    bootbox.confirm({
                        message: "This is a confirm with custom button text and color! Do you like it?",
                        buttons: {
                            confirm: {
                                label: 'Yes',
                                className: 'btn-success'
                            },
                            cancel: {
                                label: 'No',
                                className: 'btn-danger'
                            }
                        },
                        callback: function (result) {
                            if (result) 
                                $.ajax({
                                    url: "/api/customers/delete/" + btn.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(btn.parents("tr")).remove().draw()
                                    }
                                });
                        }
                    });

                });
            });
        </script>
    }