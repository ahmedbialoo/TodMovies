@model IEnumerable<TodMovies.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movie", new { @class="btn btn-primary" })
<table id="movies" class="table">
    <thead>
        <tr>
            <th>Movie Name</th>        
            <th>Genre</th>        
            <th>Release Time</th>        
            <th>Added Date</th>        
            <th>Stock Number</th>        
            <th>Delete</th>        
        </tr>
    </thead>
        <tbody>
          
        </tbody>
    
</table>
@section scripts 
    {
        <script>
            $(document).ready(function () {
                var table = $("#movies").DataTable({
                    ajax: {
                        url: "/api/movies",
                        dataSrc:""
                    },
                    columns: [
                        {
                            data: "name",
                            render: function (data, type, movie) {
                                return "<a href='editmovie/" + movie.id + "'>" + data+"</a>"
                            }
                        },
                        {
                            data:"genre.name"
                        },
                        {
                            data: "releaseTime",
                            render: function (data) {
                                var year = parseInt(data.substr(0,4))
                                var month = parseInt(data.substr(5,2))
                                var day = parseInt(data.substr(8, 2))
                                var date = new Date(year, month-1, day)
                                return day + " " + date.toString().substr(4, 3) + " " + year;
                            }
                        },
                        {
                            data: "dateAddded",
                            render: function (data) {
                                var year = parseInt(data.substr(0, 4))
                                var month = parseInt(data.substr(5, 2))
                                var day = parseInt(data.substr(8, 2))
                                var date = new Date(year, month-1, day)
                                return day + " " + date.toString().substr(4, 3) + " " + year;
                            }
                        },
                        {
                            data:"numberInStock"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button class='btn js-delete' data-movie-id=" + data + ">Delete</button>";
                            }
                        }
                    ]
                });

                $("#movies").on("click", ".js-delete", function () {
                    var btn = $(this);
                    bootbox.confirm({
                        message: "Are you sure you want to delete this movie?",
                        buttons: {
                            confirm: {
                                label: 'Yes',
                                className: 'btn-success'
                            },
                            cancel: {
                                label: 'No',
                                className: 'btn-danger'
                            }
                        },
                        callback: function (result) {
                            if (result)
                                $.ajax({
                                    url: "/api/movies/" + btn.attr("data-movie-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(btn.parents("tr")).remove().draw()
                                    }
                                });
                        }
                    });
                });
            });
        </script>    
    }